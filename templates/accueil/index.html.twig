{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block body %}
<h1>Le site des Articles OFFICIEL de mon blog</h1>

    <div class="container">
        <h2 >Liste des 10 derniers articles</h2>
        <ul>
            {% for article in articles %}
                <li><a href="{{ path('app_article_slug', { slug : article.slug}) }}">{{ article.Titre() }} </a>{{ article.createdAt |date("m/d/Y") }}</li>


            {% endfor %}
        </ul>
    </div>

{% endblock %}
