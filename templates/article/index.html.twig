{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <div class="container">
    <h1 >Liste des articles</h1>
        <a href="{{ path('app_article_nouveau') }}" class="btn btn-primary mb-3">Cr√©er un article</a>
    <ul>
        {% for article in articles %}
            <li><a href="{{ path('app_article_slug', { slug : article.slug}) }}">{{ article.Titre() }} </a>{{ article.createdAt |date("m/d/Y") }}</li>
        {% endfor %}
    </ul>
    </div>
    <div class="navigation d-flex justify-content-center">
        {{ knp_pagination_render(articles) }}
    </div>
{% endblock %}
